<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tangminghui.designpatterndemo.MainActivity">

    <Button
        android:id="@+id/btn_mvc"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="MVC Design Pattern"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_mvp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="MVP Design Pattern"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mvc" />

    <Button
        android:id="@+id/btn_mvvm"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="MVVM Design Pattern"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mvp" />

    <Button
        android:id="@+id/btn_best"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Best Design Pattern"
        app:layout_constraintTop_toBottomOf="@+id/btn_mvvm"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
